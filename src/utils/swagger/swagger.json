{
    "swagger":"2.0",
    "info":{
       "description":"",
       "version":"0.0.0",
       "title":"Agora"
    },
    "host":"localhost:4001",
    "basePath":"/",
    "tags":[
        {
            "name":"products",
            "description":"Available products for all 4 banks"
        },
        {
         "name":"users",
         "description":"Useful endpoints that help find user passwords, answer to security quesitons, etc."
         },
         {
            "name":"health",
            "description":"Check the health of the OpenBanking API endpoints for all 4 banks"
        }
    ],
    "schemes":[
       "http",
       "https"
   ],
    "paths":{
        "/v1/products/cards":{
            "get":{
                "tags":[
                   "products"
                ],
                "summary":"Returns a list of available card products",
                "description":"Returns a list of available card products for the Big 4 banks in Australia",
                "operationId":"cards",
                "produces":[
                   "application/json"
                ],
                "responses":{
                   "200":{
                      "description":"successful operation" 
                   }
                }
             }
           },
           "/v1/users/create":{
            "post":{
                "tags":[
                   "users"
                ],
                "summary":"Create a new user and save important/sensitive user details to a Google Sheets doc",
                "description":"Saves password and mother's maiden name for newly created users to a Google Sheets doc. \n\n Technical Details: This inserts a new record to the db, then gets the user id for the new user and then saves that, along with the password and mother's maiden name to the Google Docs spreadsheet.",
                "operationId":"create",
                "produces":[
                   "application/json"
                ],
                "parameters":[
                  {
                    "in":"body",
                    "name":"create",
                    "schema":{
                       "type":"object",
                       "example":{
                          "email": "",
                          "password": "pass1234",
                          "dateOfBirth": "1970-01-01",
                          "mothersMaidenName": "mammy"
                        }
                     }
                  }
                ],
                "responses":{
                   "200":{
                      "description":"successful operation" 
                   }
                }
             }
           },
           "/v1/users/loginCredentials":{
            "get":{
                "tags":[
                   "users"
                ],
                "summary":"Returns a list of login credentails for test accounts",
                "description":"Returns a list of emails and passwords for all test accounts",
                "operationId":"loginCredentials",
                "produces":[
                   "application/json"
                ],
                "parameters":[
                  {
                     "in":"query",
                     "name":"flush",
                     "description":"Clear Redis cache",
                     "required": false,
                     "type": "array",
                     "items": {
                        "type": "string",
                        "enum": [
                              "true",
                              "false"
                              ],
                        "default": "QPCC"
                     }
                  }
                ],
                "responses":{
                   "200":{
                      "description":"successful operation" 
                   }
                }
             }
           },
           "/v1/health/openBankingApi/{bank}":{
               "get":{
                  "tags":[
                     "health"
                  ],
                  "summary":"Check the status of a specific OpenBanking API endpoint",
                  "description":"Check if the products list endpoint for all a banks is 'up' or 'down'",
                  "operationId":"openBankingApi",
                  "produces":[
                     "application/json"
                  ],
                  "parameters":[
                     {
                        "name":"bank",
                        "in": "path",
                        "description": "Select a bank",
                        "required": true,
                        "type": "array",
                        "items": {
                           "type": "string",
                           "enum": [
                              "ANZ",
                              "CBA",
                              "NAB",
                              "WESTPAC"
                           ]
                        }
                     }
                  ],
                  "responses":{
                     "200":{
                        "description":"successful operation" 
                     }
               }
            }
         }
    }
}